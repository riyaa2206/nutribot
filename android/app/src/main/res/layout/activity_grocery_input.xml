<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="@string/grocery_title"
            app:titleTextColor="@color/white"
            app:navigationIcon="@android:drawable/ic_menu_revert"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grocery_subtitle"
                android:textAppearance="@style/TextAppearance.Nutribot.Body"
                android:textAlignment="center"
                android:layout_marginBottom="24dp"/>

            <!-- Input Method Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="24dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardTextInput"
                    style="@style/Widget.Nutribot.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_edit"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Text input"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_input"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPhotoUpload"
                    style="@style/Widget.Nutribot.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Photo upload"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photo_upload"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAIChat"
                    style="@style/Widget.Nutribot.Card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_send"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="AI chat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ai_chat"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Input Container -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Nutribot.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/add_ingredients"
                        android:textAppearance="@style/TextAppearance.Nutribot.Title"
                        android:layout_marginBottom="16dp"/>

                    <!-- Text Input Section -->
                    <LinearLayout
                        android:id="@+id/textInputSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Grocery List"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etGroceryList"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:gravity="top|start"
                                android:hint="@string/grocery_list_hint"
                                android:inputType="textMultiLine"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddFromList"
                            style="@style/Widget.Nutribot.Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/add_items_from_list"
                            android:layout_marginBottom="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etSingleItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/add_single_item_hint"
                                    android:inputType="text"
                                    android:imeOptions="actionDone"/>

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddSingleItem"
                                style="@style/Widget.Material3.Button.Icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:icon="@android:drawable/ic_input_add"
                                android:backgroundTint="@color/primary"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Photo Upload Section -->
                    <LinearLayout
                        android:id="@+id/photoUploadSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:gravity="center"
                        android:padding="24dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_camera"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="Camera"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/photo_upload_desc"
                            android:textAlignment="center"
                            android:layout_marginBottom="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTakePhoto"
                            style="@style/Widget.Nutribot.Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/take_photo"
                            app:icon="@android:drawable/ic_menu_camera"
                            android:layout_marginBottom="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnChooseGallery"
                            style="@style/Widget.Nutribot.Button.Outline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/choose_from_gallery"
                            app:icon="@android:drawable/ic_menu_gallery"/>

                    </LinearLayout>

                    <!-- AI Chat Section -->
                    <LinearLayout
                        android:id="@+id/aiChatSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:gravity="center"
                        android:padding="24dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@android:drawable/ic_menu_send"
                            android:layout_marginBottom="16dp"
                            android:contentDescription="AI chat"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ai_chat_desc"
                            android:textAlignment="center"
                            android:layout_marginBottom="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOpenAIChat"
                            style="@style/Widget.Nutribot.Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Open AI Chat"
                            app:icon="@android:drawable/ic_menu_send"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Grocery Items List -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGroceryItems"
                style="@style/Widget.Nutribot.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvYourIngredients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.Nutribot.Title"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/review_ingredients"
                        android:textAppearance="@style/TextAppearance.Nutribot.Body"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvGroceryItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClearAll"
                            style="@style/Widget.Nutribot.Button.Outline"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/clear_all"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnContinueMealPlanning"
                            style="@style/Widget.Nutribot.Button.Primary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="@string/continue_meal_planning"
                            app:icon="@android:drawable/ic_media_play"
                            app:iconGravity="end"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
